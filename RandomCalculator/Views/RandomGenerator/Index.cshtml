@{
    ViewData["Title"] = "Index";
}


<div id="app">
    <form>
        <div class="form-row p-3">
            <label>Максимальный вес для одной строчки в кг</label>
            <input class="form-control" v-model="maxWeight" />
        </div>

        <div class="form-row p-3">
            <label>Цена за 1 кг</label>
            <input v-model="price" class="form-control" />
        </div>

        <div class="form-group p-3">
            <label>Количество строк</label>
            <input v-model="rowQuantity" class="form-control" />
        </div>

        <div class="form-group p-3">
            <label>Общая масса в кг</label>
            <input v-model="totalWeight" class="form-control" />
        </div>

        <button class="btn btn-primary float-right m-3" v-on:click="generateFile">Сгенерировать файл</button>
    </form>
</div>
@section Scripts{
    <script src="~/indexScript.js"></script>
}
